@{
    ViewBag.Title = "Index";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/Content/jquery.js"></script>

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h3 class="mb-0">Employee Management</h3>
        </div>
        <div class="card-body">

            <div class="mb-3">
                <button type="button" id="btn1" class="btn btn-success me-2">Get All Employees</button>
                <button type="button" id="btn2" class="btn btn-secondary">Clear</button>
            </div>

            <div class="input-group mb-3" style="max-width: 400px;">
                <input type="text" class="form-control" id="txt" placeholder="Enter employee ID">
                <button type="button" id="btn3" class="btn btn-info text-white">Search</button>
            </div>

            <div id="ShowData" class="mt-3 p-3 border rounded bg-light">
                <!-- Data will display here -->
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#btn1").click(function () {
            $.getJSON('/api/EmployeeData', function (responseData) {
                $.each(responseData, function (key, val) {
                    var item = "<h5 class='list-group-item'>" + val + "</h5>";
                    $("#ShowData").append(item);
                });
            });
        });

        $("#btn2").click(function () {
            $("#ShowData").empty();
        });

        $("#btn3").click(function () {
            var Id = $("#txt").val();
            $.getJSON('/api/EmployeeData/' + Id, function (responseData) {
                var item = "<div class='alert alert-info'><b>Employee:</b> " + responseData + "</div>";
                $(item).appendTo("#ShowData");
            });
        });
    });
</script>
